int num = 1;
    while (i <= n) {
        while (j <= i - 1) {
 
            // Printing numbers
            cout << num << " ";
           
            // here we are incresing num for every
            // iteration.
            num++;
            j++;
        }
        j = 0;
        i++;
       
        // Ending line after each row
        cout << endl;
    }
}
